<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".features.home.HomeDetailFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="134dp"
                android:layout_height="76dp"
                android:src="@drawable/img_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:background="#6FACACAC"
                android:backgroundTint="#C8DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            <ImageView
                android:id="@+id/main_img"
                android:layout_width="160dp"
                android:layout_height="215dp"
                android:src="@drawable/img_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bar" />

            <View
                android:id="@+id/bar2"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="#6FACACAC"
                android:backgroundTint="#C8DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rare_degree" />

            <View
                android:id="@+id/bar3"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="#6FACACAC"
                android:backgroundTint="#C8DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/title_txt"
                style="@style/TitleTextStyle"
                android:layout_width="130dp"
                android:layout_height="33dp"
                android:text="@string/movie_title"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_img" />

            <ImageView
                android:id="@+id/rare_degree"
                android:layout_width="88dp"
                android:layout_height="35dp"
                android:src="@drawable/rare_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txt" />

            <ImageView
                android:id="@+id/legend_degree"
                android:layout_width="129dp"
                android:layout_height="38dp"
                android:src="@drawable/legend_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txt" />

            <ImageView
                android:id="@+id/normal_degree"
                android:layout_width="123dp"
                android:layout_height="33dp"
                android:src="@drawable/normal_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_txt" />

            <TextView
                android:id="@+id/publisher_txt"
                style="@style/SmallTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/publisher"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/normal_degree"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.807"
                app:layout_constraintStart_toEndOf="@+id/legend_degree"
                app:layout_constraintTop_toBottomOf="@+id/title_txt"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView14"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="발행일"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/bar2" />

            <TextView
                android:id="@+id/textView15"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="발행종료"
                android:textColor="#000000"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />

            <TextView
                android:id="@+id/saledate_txt"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="2023-09-07"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView14"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintTop_toTopOf="@+id/textView14"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/saleend_txt"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023-10-01"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView15"
                app:layout_constraintStart_toStartOf="@+id/saledate_txt"
                app:layout_constraintTop_toTopOf="@+id/textView15" />

            <android.widget.Button
                android:id="@+id/buy_btn"
                style="@style/NormalTextStyle"
                android:layout_width="156dp"
                android:layout_height="38dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_blackblue"
                android:text="15000원"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/saleend_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bar2" />

            <TextView
                android:id="@+id/textview33"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="감독명"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/bar3" />

            <TextView
                android:id="@+id/directer_txt"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="봉준호"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textview33"
                app:layout_constraintStart_toStartOf="@+id/saleend_txt"
                app:layout_constraintTop_toTopOf="@+id/textview33" />

            <TextView
                android:id="@+id/textView19"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="출연배우"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textview33"
                app:layout_constraintTop_toBottomOf="@+id/textview33" />

            <TextView
                android:id="@+id/actors_txt"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김씨,박씨,이씨,최씨,남궁씨,"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/textView19"
                app:layout_constraintStart_toStartOf="@+id/directer_txt"
                app:layout_constraintTop_toTopOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅣ"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/genre_txt"
                app:layout_constraintEnd_toStartOf="@+id/filmRating_txt"
                app:layout_constraintStart_toEndOf="@+id/runningTime_txt"
                app:layout_constraintTop_toTopOf="@+id/genre_txt" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ㅣ"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/genre_txt"
                app:layout_constraintEnd_toStartOf="@+id/runningTime_txt"
                app:layout_constraintStart_toEndOf="@+id/genre_txt"
                app:layout_constraintTop_toTopOf="@+id/genre_txt" />

            <TextView
                android:id="@+id/filmRating_txt"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12세관람가"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/runningTime_txt"
                app:layout_constraintTop_toTopOf="@+id/genre_txt" />

            <TextView
                android:id="@+id/runningTime_txt"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="128분"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/genre_txt" />

            <TextView
                android:id="@+id/genre_txt"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DRAMA"
                android:textColor="@color/black"
                app:layout_constraintBottom_toTopOf="@+id/textView29"
                app:layout_constraintEnd_toStartOf="@+id/runningTime_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />

            <TextView
                android:id="@+id/textView29"
                style="@style/NormalTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="48dp"
                android:text="줄거리"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView19"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />


            <TextView
                android:id="@+id/description_txt"
                style="@style/NormalTextStyle"
                android:layout_width="361dp"
                android:layout_height="184dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_edge_blue_round"
                android:gravity="top"
                android:lineSpacingExtra="1dp"
                android:maxLength="1000"
                android:minLines="10"
                android:paddingHorizontal="@dimen/fab_margin"
                android:paddingVertical="5dp"
                android:text="줄거리입니다."
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView29" />"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>