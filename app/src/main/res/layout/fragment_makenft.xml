<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".makerfeatures.mhome.MakenftFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/bar"
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:background="#6FACACAC"
                android:backgroundTint="#C8DDDDDD"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/makenft_txt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="영화명"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bar" />

            <EditText
                android:id="@+id/title_text"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="@string/input_movie_name"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="장르"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/title_text" />

            <EditText
                android:id="@+id/genre_text"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="@string/input_genere_txt"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/title_text"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="연령제한"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/genre_text" />

            <EditText
                android:id="@+id/age_text"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="@string/input_age_txt"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/genre_text"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="개봉날짜"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/age_text" />


            <EditText
                android:id="@+id/openday_text"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="개봉날짜를 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/age_text"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <Button
                android:id="@+id/set_calender"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_calender"
                app:layout_constraintBottom_toBottomOf="@+id/openday_text"
                app:layout_constraintStart_toEndOf="@+id/openday_text"
                app:layout_constraintTop_toTopOf="@+id/openday_text" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="감독"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/openday_text" />

            <EditText
                android:id="@+id/dire_text"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="감독을 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/openday_text"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="출연"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/dire_text" />

            <EditText
                android:id="@+id/actor_text"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="감독을 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/dire_text"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="상영시간"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView6"
                app:layout_constraintTop_toBottomOf="@+id/actor_text" />

            <EditText
                android:id="@+id/movietime_text"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="상영시간을 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/actor_text"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Normal 판매가격"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/movietime_text" />

            <EditText
                android:id="@+id/normal_price"
                android:layout_width="370dp"
                android:layout_height="35dp"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="판매가격을 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/movietime_text"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="발행날짜"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/normal_price" />


            <EditText
                android:id="@+id/saleStartTime_text"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="발행날짜를 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/normal_price"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <Button
                android:id="@+id/sell_calender"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_calender"
                app:layout_constraintBottom_toBottomOf="@+id/saleStartTime_text"
                app:layout_constraintStart_toEndOf="@+id/saleStartTime_text"
                app:layout_constraintTop_toTopOf="@+id/saleStartTime_text" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="발행종료날짜"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/saleStartTime_text" />


            <EditText
                android:id="@+id/saleEndTime_text"
                android:layout_width="320dp"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="발행종료날짜를 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/saleStartTime_text"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <Button
                android:id="@+id/sellend_calender"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="16dp"
                android:background="@drawable/ic_calender"
                app:layout_constraintBottom_toBottomOf="@+id/saleEndTime_text"
                app:layout_constraintStart_toEndOf="@+id/saleEndTime_text"
                app:layout_constraintTop_toTopOf="@+id/saleEndTime_text" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="줄거리"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/saleEndTime_text" />

            <EditText
                android:id="@+id/overview_text"
                android:layout_width="320dp"
                android:layout_height="272dp"
                android:background="@drawable/shape_edge_gray"
                android:gravity="top"
                android:hint="줄거리를 입력해주세요"
                android:lineSpacingExtra="3dp"
                android:maxLength="1000"
                android:minLines="10"
                android:paddingHorizontal="@dimen/fab_margin"
                android:paddingVertical="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                app:layout_constraintStart_toStartOf="@+id/saleEndTime_text"
                app:layout_constraintTop_toBottomOf="@+id/textView20" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="16dp"
                android:text="포스터 등록"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/overview_text" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                android:text="NFT 이미지 등록"
                android:textColor="@color/gray"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView11" />

            <ImageView
                android:id="@+id/poster_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/input_img"
                app:layout_constraintEnd_toEndOf="@+id/textView11"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <ImageView
                android:id="@+id/normal_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/input_img"
                app:layout_constraintEnd_toEndOf="@+id/textView12"
                app:layout_constraintStart_toStartOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="113dp"
                android:layout_height="22dp"
                android:src="@drawable/normal_img"
                app:layout_constraintEnd_toEndOf="@+id/normal_img"
                app:layout_constraintStart_toStartOf="@+id/normal_img"
                app:layout_constraintTop_toBottomOf="@+id/normal_img" />

            <EditText
                android:id="@+id/normal_quantity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="발행할 개수를 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="@+id/imageView8"
                app:layout_constraintTop_toBottomOf="@+id/imageView8" />

            <ImageView
                android:id="@+id/rare_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/input_img"
                app:layout_constraintEnd_toEndOf="@+id/poster_img"
                app:layout_constraintStart_toStartOf="@+id/poster_img"
                app:layout_constraintTop_toBottomOf="@+id/normal_quantity" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="113dp"
                android:layout_height="22dp"
                android:src="@drawable/rare_img"
                app:layout_constraintEnd_toEndOf="@+id/rare_img"
                app:layout_constraintStart_toStartOf="@+id/rare_img"
                app:layout_constraintTop_toBottomOf="@+id/rare_img" />

            <EditText
                android:id="@+id/rare_quantity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="발행할 개수를 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/rare_img"
                app:layout_constraintStart_toStartOf="@+id/rare_img"
                app:layout_constraintTop_toBottomOf="@+id/imageView9" />

            <ImageView
                android:id="@+id/legend_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/input_img"
                app:layout_constraintEnd_toEndOf="@+id/normal_img"
                app:layout_constraintStart_toStartOf="@+id/normal_img"
                app:layout_constraintTop_toTopOf="@+id/rare_img" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="113dp"
                android:layout_height="22dp"
                android:src="@drawable/legend_img"
                app:layout_constraintEnd_toEndOf="@+id/legend_img"
                app:layout_constraintStart_toStartOf="@+id/legend_img"
                app:layout_constraintTop_toBottomOf="@+id/legend_img" />

            <EditText
                android:id="@+id/legend_quantity"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/shape_edge_gray"
                android:ems="10"
                android:hint="발행할 개수를 입력해주세요"
                android:inputType="text"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/black"
                android:textColorHint="@color/gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/legend_img"
                app:layout_constraintStart_toStartOf="@+id/legend_img"
                app:layout_constraintTop_toBottomOf="@+id/imageView12" />

            <Button
                android:id="@+id/preview_btn"
                android:layout_width="157dp"
                android:layout_height="47dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_edge_gray_and_blackblue"
                android:text="미리보기"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="@+id/rare_quantity"
                app:layout_constraintStart_toStartOf="@+id/rare_quantity"
                app:layout_constraintTop_toBottomOf="@+id/rare_quantity" />

            <Button
                android:id="@+id/publish_btn"
                android:layout_width="157dp"
                android:layout_height="47dp"
                android:background="@drawable/shape_blackblue"
                android:text="발행하기"
                app:layout_constraintEnd_toStartOf="@+id/normal_quantity"
                app:layout_constraintTop_toBottomOf="@+id/poster_img" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>