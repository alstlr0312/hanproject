<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Unchecked -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/main_black" />
            <stroke
                android:color="@color/main_red_light"
                android:width="1.2dp" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
    <!-- Checked -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/main_red" />
            <stroke
                android:color="@color/main_red_light"
                android:width="1.2dp" />
            <corners
                android:radius="10dp" />
        </shape>
    </item>
</selector>